    <script  language="javascript">
		var line_count=0;
		
		var REPORT_ISSUES = "";
		
		function writeEvenOddTRTag() {
			line_count++; 
			
			if (line_count%2 == 0)
				document.write("<tr class='even_row'>");
			else
				document.write("<tr class='odd_row'>"); 
				
			
		}
		var projectInt=0;
		function printnoi(){
			
			
			
			for(var i=0;i<1;i++){	
				projectInt++;
				if (projectInt%2 == 0){
					document.write("<tr class='even_row'>");
				}else{
					document.write("<tr class='odd_row'>");
				}		
				
			}
		}

		function printText(field){
			var contentList = field.split("`"); 
			console.log(contentList);
			
		
			var category = contentList[0];
			var goal = contentList[1];
			var metric = contentList[2];
			var attribute = contentList[3];
			var formula = contentList[4];
			var legends = contentList[5];
			var targetValue = contentList[6];
			var actualValue = contentList[7];
			var unit = contentList[8];
			
			
			
			var signFirst = "&lt;;&gt;";
			var signNext = "&lt;:&gt;";
			var signContentOne = "&lt;and&gt;";
			var signContentTwo = ":";
			
			var categoryLists 	=  new Array();
			var goalLists 		=  new Array();
			var metricLists 	=  new Array();
			var attributeLists 	=  new Array();
			var formulaLists 	=  new Array();
			var legendsLists 	=  new Array();
			var targetValueLists =  new Array();
			var actualValueLists =  new Array();
			var unitLists 	=  new Array();
			
			if(	null!=category && "" != category){
				categoryLists 	= (""+category).split(signFirst);
			}
			
			if(	null!=goal && "" != goal){
				goalLists 	= (""+goal).split(signFirst);
			}
			if(	null!=metric && "" != metric){
				metricLists 	= (""+metric).split(signFirst);
			}
			if(	null!=attribute && "" != attribute){
				attributeLists 	= (""+attribute).split(signFirst);
			}
			if(	null!=formula && "" != formula){
				formulaLists 	= (""+formula).split(signFirst);
			}
			if(	null!=legends && "" != legends){
				legendsLists 	= (""+legends).split(signFirst);
			}
			if(	null!=targetValue && "" != targetValue){
				targetValueLists = (""+targetValue).split(signFirst);
			}
			
			if(	null!=actualValue && "" != actualValue){
				actualValueLists 	= (""+actualValue).split(signFirst);
				
				
				
			}
			if(	null!=unit && "" != unit){
				unitLists 	= (""+unit).split(signFirst);
			}

			
			
			
			var snoArray 			=  new Array();
			var projectArray 		=  new Array();
			
			
			var categoryTextArray 	=  new Array();
			var goalTextArray 		=  new Array();
			var metricTextArray 	=  new Array();
			var attributeTextArray 	=  new Array();
			var formulaTextArray 	=  new Array();
			var legendsTextArray 	=  new Array();
			var targetValueArray 	=  new Array();
			var actualValueArray 	=  new Array();
			var unitValueArray 		=  new Array();
			
			
			var categoryList 	= new Array();
			var goalList 		= new Array();
			var metricList 		= new Array();
			var attributeList 	= new Array();
			var formulaList 	= new Array();
			var legendsList 	= new Array();
			var targetValueList = new Array();
			var actualValueList = new Array();
			var unitList 		= new Array();
			
			
			var addLists       	= new Array();
			var addListsIndex   = 0; 
			var indexList       = new Array();
			var indexNameList       = new Array();
			
			var key = 0;
			var snoIndex = 0;
			
			var indexArray = 0;
			
			
			
			
			
			
			for(var categoryIndex=0 ; categoryIndex<categoryLists.length ; categoryIndex++){
				if(null != categoryLists[categoryIndex] && "" != categoryLists[categoryIndex]){
					categoryList = categoryLists[categoryIndex].split(signNext);
					snoArray[snoIndex] = categoryList[0];
					categoryTextArray[snoIndex] = categoryList[1]
				}
				if(null != goalLists[categoryIndex] && "" != goalLists[categoryIndex]){
					goalList = goalLists[categoryIndex].split(signNext);
					goalTextArray[snoIndex] = goalList[1]
				}
				if(null != metricLists[categoryIndex] && "" != metricLists[categoryIndex]){
					metricList = metricLists[categoryIndex].split(signNext);
					metricTextArray[snoIndex] 	= metricList[1]
				}
				if(null != attributeLists[categoryIndex] && "" != attributeLists[categoryIndex]){
					attributeList = attributeLists[categoryIndex].split(signNext);
					attributeTextArray[snoIndex] = attributeList[1]
				}
				if(null != formulaLists[categoryIndex] && "" != formulaLists[categoryIndex]){
					formulaList = formulaLists[categoryIndex].split(signNext);
					formulaTextArray[snoIndex] = formulaList[1]
				}
				if(null != legendsLists[categoryIndex] && "" != legendsLists[categoryIndex]){
					legendsList = legendsLists[categoryIndex].split(signNext);
					legendsTextArray[snoIndex] = legendsList[1]
				}
				if(null != targetValueLists[categoryIndex] && "" != targetValueLists[categoryIndex]){
					targetValueList = targetValueLists[categoryIndex].split(signNext);
					targetValueArray[snoIndex] = targetValueList[1]
				}
				if(null != actualValueLists[categoryIndex] && "" != actualValueLists[categoryIndex]){
					actualValueList = actualValueLists[categoryIndex].split(signNext);
					actualValueArray[snoIndex] = actualValueList[1]
					
					if(actualValueList[1].indexOf(",") > 0 ){
						 
						var bIndex = 0 
						var aArry   = new Array();
						var bArry   = new Array();
						var bigArray = actualValueList[1].split(",");
						
						for(var k=0 ; k<bigArray.length ; k++){
							var linesList = bigArray[k].split(":");
							
							
							aArry[bIndex] = linesList[0];
							bArry[bIndex] = linesList[1];
							bIndex++;
						}
						console.log("bArry : " + bArry);
						console.log("aArry : " + aArry);
						
						
						
						
						addLists[addListsIndex] = bArry;
						indexNameList[addListsIndex] = aArry;
						console.log("addListsIndex : " + addListsIndex);
						
						addListsIndex++;
						
						indexList[indexArray] = snoIndex;
						indexArray++ ;
						console.log("addLists : " + addLists);
						console.log("addListsIndex ++: " + addListsIndex);
					}
					
					
					
				}
				if(null != unitLists[categoryIndex] && "" != unitLists[categoryIndex]){
					unitList = unitLists[categoryIndex].split(signNext);
					unitValueArray[snoIndex]  = unitList[1]
				}
				snoIndex++;
			}
			
			
			
			
			
			
			
			
			
			console.log("addLists : " + addLists);
			var arrayKey = 0;
			
			for(var index=0;index<snoArray.length;index++){
				if(actualValueArray[index].indexOf(",")<0){
				
					printnoi();
					document.write("<td class='border'>"+snoArray[index]+"</td>");  // SNO
					
					document.write("<td class='border'>"+categoryTextArray[index]+"</td>"); // category
					document.write("<td class='border'>"+goalTextArray[index]+"</td>");
					document.write("<td class='border'>"+metricTextArray[index]+"</td>");
					document.write("<td class='border'>"+attributeTextArray[index]+"</td>");
					document.write("<td class='border'>"+formulaTextArray[index]+"</td>");
					document.write("<td class='border' style='width:40%;'>"+legendsTextArray[index]+"</td>");
					document.write("<td class='border'>"+targetValueArray[index]+"</td>");
					document.write("<td class='border' width='200px'>"+actualValueArray[index]+"</td>");
					document.write("<td class='border'>"+unitValueArray[index]+"</td>");
				
				}	
				
				
				
				for(var appendIndex=0; appendIndex<indexList.length ; appendIndex++){
					console.log("appendIndex :  " +  indexList[appendIndex]);
					console.log("index :  " +  index);
					if(indexList[appendIndex] == index){
						
						
						for(var i=0 ; i<addLists.length ; i++){
							console.log("addLists "+ i +" :  " +  addLists[i]);
							if( i ==arrayKey ){
								console.log("arrayKey 111111111111111111: " + arrayKey);
								for(var j=0 ; j<addLists[i].length ; j++){
									console.log("addLists "+ i +" "+j+" :  " +  addLists[i][j]);
									var currentArray = addLists[i];
									var currentNameList = indexNameList[i];
									printnoi();
									document.write("<td class='border'>"+snoArray[index]+"</td>");  // SNO
									
									document.write("<td class='border'>"+categoryTextArray[index]+"</td>"); // category
									document.write("<td class='border'>"+goalTextArray[index]+"</td>");
									document.write("<td class='border'>"+metricTextArray[index]+"</td>");
									document.write("<td class='border'>"+attributeTextArray[index]+"</td>");
									document.write("<td class='border'>"+formulaTextArray[index]+"</td>");
									document.write("<td class='border' style='width:40%;'>"+currentNameList[j]+"</td>");
									document.write("<td class='border'>"+targetValueArray[index]+"</td>");
									document.write("<td class='border' width='200px'>"+currentArray[j]+"</td>");
									document.write("<td class='border'>"+unitValueArray[index]+"</td>");
								}
							}
							
						}
						arrayKey++;
						console.log("arrayKey : " + arrayKey);
					}
				}
			}
			
		 
			
		}
		function paramField(field){
		 document.write("<td class='border'>"+field+"</td>");
		}
		
	</script> 
	
