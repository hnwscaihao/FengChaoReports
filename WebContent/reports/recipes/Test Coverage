	if(REPORT_ISSUES == "") REPORT_ISSUES = <%<%builtin ID%>%>;
	else REPORT_ISSUES = REPORT_ISSUES+","+<%<%builtin ID%>%>;

	var row = {};
    var pro = "<%<%builtin Project%>%>";
		row.pro = pro;
    	row.doc = <%<%builtin ID%>%>;
    DocmentIDs.push(row);
</script>

